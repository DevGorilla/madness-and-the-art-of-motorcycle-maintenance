<div class="row d-flex justify-content-center">
  <div class="col-12">
    {%- for post in posts %}
      <div class="pb-5">
        <a href="{{ post.url | url }}" class="text-decoration-none text-dark"><h2>{{ post.data.title}}</h2></a>
        <p class="lead">
          {{ post.data.summary }}
        </p>
      <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
          <h2 class="accordion-header" id="panelsStayOpen-{{post.data.handle}}-headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-{{post.data.handle}}-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-{{post.data.handle}}-collapseOne">
              Live Example
            </button>
          </h2>
          <div id="panelsStayOpen-{{post.data.handle}}-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-{{post.data.handle}}-headingOne">
            <div class="accordion-body">
              <div class="rounded-top p-4">
                {{ post.data.content | safe }}
              </div>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="panelsStayOpen-{{post.data.handle}}-headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-{{post.data.handle}}-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-{{post.data.handle}}-collapseTwo">
              Code
            </button>
          </h2>
          <div id="panelsStayOpen-{{post.data.handle}}-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-{{post.data.handle}}-headingTwo">
            <div class="accordion-body">
              <div class="bg-light rounded border border-top-0 p-4">
                <code>
                  <xmp class="w-auto font-monospace" style="overflow-x:scroll;">{{ post.data.content | safe}}</xmp>
                </code>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    {% endfor %}
  </div>
</div>

<div class="row d-flex justify-content-center mt-5">
  <div class="col-12">
    <div class="row d-flex justify-content-between">
      <div class="col">
        {% if pagination.href.previous %}
          <a href="{{pagination.href.previous}}" class="btn btn-outline-primary">< Previous Page</a> {% endif %} </div> <div class="col text-end"> {% if pagination.href.next %} <a href="{{pagination.href.next}}" class="btn btn-outline-primary">Next Page ></a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
